<div class="row">
	 <div class="col-md-5 mt-3">
		  {{#link-to "todos.new" class="btn btn-success"}}
		    Create Todo
		  {{/link-to}}

	   <hr>

		  {{outlet}}
	 </div>
	 <div class="col-md-7 mt-3">
		  <div class="row">
			   <div class="col-md-12">
				    <form class="form-inline">
					     <div class="form-group">
						      {{input type="text" class="form-control" value=filter id="search" placeholder="Search Todos..."}}
					     </div>
					     
				    </form>
			   </div>
	   </div>
		  <hr><br>
		  {{#if filter}}
		    {{#each  filteredTodos as |todo|}}
			     <div class="card  mt-3 mb-3 bg-dark"> 
					     <div class="card-body">
				        <h4>{{#link-to "todos.edit" todo.id}}{{todo.title}} {{/link-to}}<span class="label label-primary  bg-danger text-white  float-right">{{format-date todo.date}}</span></h4>
			         <span class="text-warning h4">{{todo.body}}</span>
          </div>
		      </div>
		    {{/each}}
		  {{else}}
			   {{#each  sortedTodos as |todo|}}
			     <div class="card mt-3 mb-3 bg-dark">
					     <div class="card-body">
				        <h4>{{#link-to "todos.edit" todo.id}}{{todo.title}} {{/link-to}} <span class="label label-primary bg-danger  text-white float-right">{{format-date todo.date}}</span></h4>
		          <span class="text-warning h4">{{todo.body}}</span> 
			       </div>
			     </div>
		    {{/each}}
		  {{/if}}
	 </div>
</div>
